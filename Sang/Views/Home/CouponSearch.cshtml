@model IEnumerable<Sang.Models.SangClient>
@{
    ViewBag.Title = "CouponSearch";
    Layout = "~/Views/Shared/_AdminMasterPage.cshtml";
}
<div class="evaluacion">
    <br />
    <h2>
        Busqueda de cupón</h2>
    @using (Html.BeginForm("CouponSearch", "Home", FormMethod.Post))
    {
        <p>
            @Html.TextBox("coupon", null, new { style = "background-color: black; border: 1px solid #2F2F2F; color: white; height:25px; font-size: 16px; text-align: center" })
            <input type="submit" value="buscar" />
        </p>
        
    }
    <table>
        <tr>
            <th>
                Nombre completo
            </th>
            <th>
                Código del cupón
            </th>
            <th>
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompleteName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CouponNumber)
                </td>
                <td>
                    @using (Html.BeginForm("SleepingImageMayor", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <p>
                            @Html.TextBox("cid",item.SangClientID)
                            
                            <input type="file" id="document" name="Subir archivo" />
                            <input type="submit" value="Cargar imagen" />
                        </p>
                    }
                    @Html.ActionLink("Cupón canjeado", "SleepingImageAsistMayor", new { id = item.SangClientID })
                </td>
            </tr>
        }
    </table>
</div>
